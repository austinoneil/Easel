<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/color_picker_layout"
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
    <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageButton
                android:id="@+id/set_red"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="#ffff0000"
                android:scaleType="fitCenter"
                android:onClick="setColor"/>
        <ImageButton
                android:id="@+id/set_orange"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="#ffffaf00"
                android:scaleType="fitCenter"
                android:onClick="setColor"/>
        <ImageButton
                android:id="@+id/set_yellow"
                android:onClick="setColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="#ffffff00"
                android:scaleType="fitCenter"/>
        <ImageButton
                android:id="@+id/set_green"
                android:onClick="setColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="#ff00ff00"
                android:scaleType="fitCenter"/>
    </LinearLayout>
    <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageButton
                android:id="@+id/set_blue"
                android:onClick="setColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="#ff0000ff"
                android:scaleType="fitCenter"/>
        <ImageButton
                android:id="@+id/set_purple"
                android:onClick="setColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="#ffff00ff"
                android:scaleType="fitCenter"/>
        <ImageButton
                android:id="@+id/set_brown"
                android:onClick="setColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="#ffc25429"
                android:scaleType="fitCenter"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/set_white"
                android:onClick="setColor"
                android:src="#ffffffff"/>
    </LinearLayout>

</LinearLayout>